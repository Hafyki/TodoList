<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog
        title="Detalhes da Tarefa: {detailModel>Title}"
        resizable="false"
        stretch="false">
        <content>
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                title="Informações da Tarefa"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false">
                <f:content>
                    <Label text="Título"/>
                    <Input value="{detailModel>Title}" id="titleInput"/>
                    
                    <Label text="ID"/>
                    <Text text="{detailModel>Id}"/>
                    
                    <Label text="ID do Usuário"/>
                    <Input value="{detailModel>UserId}" type="Number"/>

                    <Label text="Concluída"/>
                    <Switch state="{detailModel>IsCompleted}" type="AcceptReject"/>
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Salvar" press=".onSaveToDo" type="Accept"/>
        </beginButton>
        <endButton>
            <Button text="Cancelar" press=".onCloseDetailsDialog" type="Reject"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>